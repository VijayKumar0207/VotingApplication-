<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".Admin2pg">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineVertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.3" />

    <TextView
        android:id="@+id/headerText"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/fonta"
        android:text="Enter Candidate Name:"
        android:textColor="#000000"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/label1"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/fonta"
        android:gravity="center"
        android:text="No.1"
        android:textColor="@color/black"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@id/headerText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guidelineVertical" />

    <EditText
        android:id="@+id/ce1"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@drawable/border_pink"
        android:hint="Candidate 1"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@id/guidelineVertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/label1"
        android:layout_marginEnd="30dp" />

    <TextView
        android:id="@+id/label2"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/fonta"
        android:gravity="center"
        android:text="No.2"
        android:textColor="@color/black"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@id/label1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guidelineVertical" />

    <EditText
        android:id="@+id/ce2"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@drawable/border_pink"
        android:hint="Candidate 2"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@id/guidelineVertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/label2"
        android:layout_marginEnd="30dp" />

    <TextView
        android:id="@+id/label3"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/fonta"
        android:gravity="center"
        android:text="No.3"
        android:textColor="@color/black"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@id/label2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guidelineVertical" />

    <EditText
        android:id="@+id/ce3"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@drawable/border_pink"
        android:hint="Candidate 3"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@id/guidelineVertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/label3"
        android:layout_marginEnd="30dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/ce3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/button_gradiant"
            android:padding="10dp"
            android:elevation="10dp">

            <Button
                android:id="@+id/sb1"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:text="Submit"
                android:textSize="23sp"
                android:fontFamily="@font/fontb"
                android:backgroundTint="@android:color/transparent"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/button_gradiant"
            android:padding="10dp"
            android:elevation="10dp"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/vb1"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:text="View Vote"
                android:textSize="23sp"
                android:fontFamily="@font/fontb"
                android:backgroundTint="@android:color/transparent"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/button_gradiant"
            android:padding="10dp"
            android:elevation="10dp"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/rs"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:text="Restart"
                android:textSize="23sp"
                android:fontFamily="@font/fontb"
                android:backgroundTint="@android:color/transparent"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/button_gradiant"
            android:padding="10dp"
            android:elevation="10dp"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/cb2"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:text="Back"
                android:textSize="23sp"
                android:fontFamily="@font/fontb"
                android:backgroundTint="@android:color/transparent"
                android:layout_weight="1" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
